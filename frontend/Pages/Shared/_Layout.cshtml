<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Factory Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FactorySystemWebpage.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <i class="bi bi-factory"></i> Factory Management System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="inventoryDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-box-seam"></i> Inventory
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="inventoryDropdown">
                                <li><a class="dropdown-item" asp-page="/RawMaterials/Index"><i class="bi bi-bag"></i> Raw Materials</a></li>
                                <li><a class="dropdown-item" asp-page="/Products/Index"><i class="bi bi-basket"></i> Products</a></li>
                                <li><a class="dropdown-item" asp-page="/Inventory/Index"><i class="bi bi-building"></i> Warehouse</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="productionDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear"></i> Production
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="productionDropdown">
                                <li><a class="dropdown-item" asp-page="/ProductionRooms/Index"><i class="bi bi-building"></i> Production Rooms</a></li>
                                <li><a class="dropdown-item" asp-page="/Dashboard/ProductionTracking"><i class="bi bi-graph-up"></i> Production Tracking</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="employeeDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-people"></i> Employees
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="employeeDropdown">
                                <li><a class="dropdown-item" asp-page="/Employees/Index"><i class="bi bi-person-badge"></i> Employee List</a></li>
                                <li><a class="dropdown-item" asp-page="/Dashboard/Attendance"><i class="bi bi-calendar-check"></i> Attendance</a></li>
                                <li><a class="dropdown-item" asp-page="/Dashboard/Payroll"><i class="bi bi-cash"></i> Payroll</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="businessDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-briefcase"></i> Business
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="businessDropdown">
                                <li><a class="dropdown-item" asp-page="/Vendors/Index"><i class="bi bi-truck"></i> Vendors</a></li>
                                <li><a class="dropdown-item" asp-page="/Customers/Index"><i class="bi bi-shop"></i> Customers</a></li>
                                <li><a class="dropdown-item" asp-page="/Dashboard/Distribution"><i class="bi bi-send"></i> Distribution</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Dashboard/Index">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Factory Management System - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>