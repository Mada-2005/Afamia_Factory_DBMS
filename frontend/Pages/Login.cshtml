@page
@model FactorySystemWebpage.Pages.LoginModel
@{
    ViewData["Title"] = Model.IsArabic ? "تسجيل الدخول" : "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="@(Model.IsArabic ? "ar" : "en")" dir="@(Model.IsArabic ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @(Model.IsArabic ? "نظام إدارة المصنع" : "Factory Management System")</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @if (Model.IsArabic)
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    }
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .login-card {
            max-width: 450px;
            width: 100%;
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        }
        .login-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem;
            border-radius: 15px 15px 0 0;
            text-align: center;
        }
        .login-body {
            padding: 2rem;
        }
        .btn-login {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            padding: 12px;
            font-size: 1.1rem;
        }
        .btn-login:hover {
            opacity: 0.9;
            color: white;
        }
        .lang-switcher {
            position: absolute;
            top: 20px;
            @(Model.IsArabic ? "left" : "right"): 20px;
        }
    </style>
</head>
<body>
    <div class="lang-switcher">
        <a href="?lang=en" class="btn btn-light btn-sm @(!Model.IsArabic ? "active" : "")">English</a>
        <a href="?lang=ar" class="btn btn-light btn-sm @(Model.IsArabic ? "active" : "")">العربية</a>
    </div>

    <div class="login-card">
        <div class="login-header">
            <i class="bi bi-factory" style="font-size: 3rem;"></i>
            <h2 class="mt-2">@(Model.IsArabic ? "نظام إدارة المصنع" : "Factory Management System")</h2>
            <p class="mb-0">@(Model.IsArabic ? "تسجيل الدخول إلى حسابك" : "Login to your account")</p>
        </div>

        <div class="login-body">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
                </div>
            }

            <form method="post">
                <div class="mb-3">
                    <label asp-for="Username" class="form-label">
                        <i class="bi bi-person"></i> @(Model.IsArabic ? "اسم المستخدم" : "Username")
                    </label>
                    <input asp-for="Username" class="form-control form-control-lg" placeholder="@(Model.IsArabic ? "أدخل اسم المستخدم" : "Enter username")" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Password" class="form-label">
                        <i class="bi bi-lock"></i> @(Model.IsArabic ? "كلمة المرور" : "Password")
                    </label>
                    <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="@(Model.IsArabic ? "أدخل كلمة المرور" : "Enter password")" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="Language" />

                <button type="submit" class="btn btn-login w-100">
                    <i class="bi bi-box-arrow-in-right"></i> @(Model.IsArabic ? "تسجيل الدخول" : "Login")
                </button>
            </form>

            <hr class="my-4" />

            <div class="text-center text-muted small">
                <p class="mb-0">@(Model.IsArabic ? "بيانات تجريبية للاختبار:" : "Demo credentials for testing:")</p>
                <p class="mb-0"><strong>@(Model.IsArabic ? "مدير:" : "Admin:")</strong> admin / admin123</p>
                <p class="mb-0"><strong>@(Model.IsArabic ? "موظف:" : "Employee:")</strong> employee / emp123</p>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
