@page
@model FactorySystemWebpage.Pages.Dashboard.Employee.MyPayrollModel
@{
    ViewData["Title"] = Model.Translate("My Payroll", "راتبي");
    Layout = "~/Pages/Shared/_LayoutArabic.cshtml";
}

<div class="mb-4">
    <h1><i class="bi bi-cash"></i> @Model.Translate("My Payroll", "راتبي")</h1>
    <p class="lead text-muted">@Model.Translate("View your salary and payment history", "عرض الراتب وتاريخ الدفعات")</p>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0">@Model.Translate("Payroll History", "سجل الرواتب")</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>@Model.Translate("Month", "الشهر")</th>
                        <th>@Model.Translate("Year", "السنة")</th>
                        <th>@Model.Translate("Base Salary", "الراتب الأساسي")</th>
                        <th>@Model.Translate("Bonus", "المكافأة")</th>
                        <th>@Model.Translate("Deductions", "الخصومات")</th>
                        <th>@Model.Translate("Total", "الإجمالي")</th>
                        <th>@Model.Translate("Payment Date", "تاريخ الدفع")</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="7" class="text-center text-muted">
                            <i class="bi bi-info-circle"></i> @Model.Translate("Connect to database to view payroll records", "اتصل بقاعدة البيانات لعرض سجلات الرواتب")
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
