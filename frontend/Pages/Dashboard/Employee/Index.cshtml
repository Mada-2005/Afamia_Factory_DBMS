@page
@model FactorySystemWebpage.Pages.Dashboard.Employee.IndexModel
@{
    ViewData["Title"] = Model.Translate("Employee Dashboard", "لوحة تحكم الموظف");
    Layout = "~/Pages/Shared/_LayoutArabic.cshtml";
}

<div class="mb-4">
    <h1 class="display-4">
        <i class="bi bi-person-badge"></i> @Model.Translate("Employee Dashboard", "لوحة تحكم الموظف")
    </h1>
    <p class="lead text-muted">
        @Model.Translate($"Welcome, {Model.CurrentFullName}", $"مرحباً، {Model.CurrentFullName}")
    </p>
</div>

<div class="row g-4 mb-4">
    <!-- My Attendance -->
    <div class="col-md-6">
        <div class="card text-white bg-info h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">@Model.Translate("My Attendance", "حضوري")</h5>
                        <p class="mb-0">@Model.Translate("View your attendance records and work hours", "عرض سجلات الحضور وساعات العمل")</p>
                    </div>
                    <i class="bi bi-calendar-check display-3"></i>
                </div>
            </div>
            <div class="card-footer">
                <a asp-page="/Dashboard/Employee/MyAttendance" class="text-white text-decoration-none">
                    @Model.Translate("View My Attendance", "عرض حضوري") <i class="bi @(Model.IsArabic ? "bi-arrow-left" : "bi-arrow-right")"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- My Payroll -->
    <div class="col-md-6">
        <div class="card text-white bg-success h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">@Model.Translate("My Payroll", "راتبي")</h5>
                        <p class="mb-0">@Model.Translate("View your salary and payment history", "عرض الراتب وتاريخ الدفعات")</p>
                    </div>
                    <i class="bi bi-cash display-3"></i>
                </div>
            </div>
            <div class="card-footer">
                <a asp-page="/Dashboard/Employee/MyPayroll" class="text-white text-decoration-none">
                    @Model.Translate("View My Payroll", "عرض راتبي") <i class="bi @(Model.IsArabic ? "bi-arrow-left" : "bi-arrow-right")"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mb-4">
    <!-- Quick Actions -->
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-plus-circle"></i> @Model.Translate("Add New Records", "إضافة سجلات جديدة")</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-page="/RawMaterials/Create" class="btn btn-outline-primary">
                        <i class="bi bi-bag"></i> @Model.Translate("Receive Raw Material", "استلام مواد خام")
                    </a>
                    <a asp-page="/Products/Create" class="btn btn-outline-success">
                        <i class="bi bi-basket"></i> @Model.Translate("Log Product", "تسجيل منتج")
                    </a>
                    <a asp-page="/ProductSearch" class="btn btn-outline-info">
                        <i class="bi bi-search"></i> @Model.Translate("Search Product", "البحث عن منتج")
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Today's Summary -->
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0"><i class="bi bi-clock-history"></i> @Model.Translate("Today's Summary", "ملخص اليوم")</h5>
            </div>
            <div class="card-body">
                <p><strong>@Model.Translate("Date:", "التاريخ:")</strong> @DateTime.Now.ToString("yyyy-MM-dd")</p>
                <p><strong>@Model.Translate("Status:", "الحالة:")</strong>
                    <span class="badge bg-success">@Model.Translate("Active", "نشط")</span>
                </p>
                <p class="mb-0"><strong>@Model.Translate("Current Time:", "الوقت الحالي:")</strong> @DateTime.Now.ToString("HH:mm")</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> @Model.Translate("Important Notes", "ملاحظات هامة")</h5>
            </div>
            <div class="card-body">
                <ul>
                    <li>@Model.Translate("Record all raw material receipts immediately upon arrival", "سجل جميع المواد الخام فور الاستلام")</li>
                    <li>@Model.Translate("Log finished products with accurate batch numbers", "سجل المنتجات النهائية بأرقام دفعات دقيقة")</li>
                    <li>@Model.Translate("Check expiration dates before using materials", "تحقق من تواريخ انتهاء الصلاحية قبل الاستخدام")</li>
                    <li>@Model.Translate("Report any quality issues immediately", "أبلغ عن أي مشاكل في الجودة فوراً")</li>
                </ul>
            </div>
        </div>
    </div>
</div>
