@page
@model FactorySystemWebpage.Pages.Dashboard.Employee.MyAttendanceModel
@{
    ViewData["Title"] = Model.Translate("My Attendance", "حضوري");
    Layout = "~/Pages/Shared/_LayoutArabic.cshtml";
}

<div class="mb-4">
    <h1><i class="bi bi-calendar-check"></i> @Model.Translate("My Attendance", "حضوري")</h1>
    <p class="lead text-muted">@Model.Translate("View your attendance records and working hours", "عرض سجلات الحضور وساعات العمل")</p>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-info">
            <div class="card-body text-center">
                <h6 class="text-uppercase">@Model.Translate("This Month", "هذا الشهر")</h6>
                <h2>-- @Model.Translate("Days", "يوم")</h2>
                <small>@Model.Translate("Days Present", "أيام الحضور")</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success">
            <div class="card-body text-center">
                <h6 class="text-uppercase">@Model.Translate("Total Hours", "إجمالي الساعات")</h6>
                <h2>-- @Model.Translate("Hrs", "ساعة")</h2>
                <small>@Model.Translate("This Month", "هذا الشهر")</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-warning">
            <div class="card-body text-center">
                <h6 class="text-uppercase">@Model.Translate("Absent Days", "أيام الغياب")</h6>
                <h2>-- @Model.Translate("Days", "يوم")</h2>
                <small>@Model.Translate("This Month", "هذا الشهر")</small>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">@Model.Translate("Attendance History", "سجل الحضور")</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>@Model.Translate("Date", "التاريخ")</th>
                        <th>@Model.Translate("Start Time", "وقت البداية")</th>
                        <th>@Model.Translate("End Time", "وقت النهاية")</th>
                        <th>@Model.Translate("Hours Worked", "ساعات العمل")</th>
                        <th>@Model.Translate("Status", "الحالة")</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="5" class="text-center text-muted">
                            <i class="bi bi-info-circle"></i> @Model.Translate("Connect to database to view attendance records", "اتصل بقاعدة البيانات لعرض سجلات الحضور")
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
