@page
@model FactorySystemWebpage.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="mb-4">
    <h1 class="display-4"><i class="bi bi-speedometer2"></i> Factory Dashboard</h1>
    <p class="lead text-muted">Real-time overview of factory operations</p>
</div>

<div class="row g-4 mb-4">
    <!-- Inventory Summary -->
    <div class="col-md-3">
        <div class="card text-white bg-primary h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase">Raw Materials</h6>
                        <h2 class="mb-0">--</h2>
                        <small>Items in stock</small>
                    </div>
                    <i class="bi bi-bag display-4"></i>
                </div>
            </div>
            <div class="card-footer">
                <a asp-page="/RawMaterials/Index" class="text-white text-decoration-none">
                    View Details <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Products Summary -->
    <div class="col-md-3">
        <div class="card text-white bg-success h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase">Products</h6>
                        <h2 class="mb-0">--</h2>
                        <small>Ready for shipment</small>
                    </div>
                    <i class="bi bi-basket display-4"></i>
                </div>
            </div>
            <div class="card-footer">
                <a asp-page="/Products/Index" class="text-white text-decoration-none">
                    View Details <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Employees -->
    <div class="col-md-3">
        <div class="card text-white bg-info h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase">Employees</h6>
                        <h2 class="mb-0">--</h2>
                        <small>Active workers</small>
                    </div>
                    <i class="bi bi-people display-4"></i>
                </div>
            </div>
            <div class="card-footer">
                <a asp-page="/Employees/Index" class="text-white text-decoration-none">
                    View Details <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Production Rooms -->
    <div class="col-md-3">
        <div class="card text-white bg-warning h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase">Production Rooms</h6>
                        <h2 class="mb-0">--</h2>
                        <small>Active rooms</small>
                    </div>
                    <i class="bi bi-building display-4"></i>
                </div>
            </div>
            <div class="card-footer">
                <a asp-page="/ProductionRooms/Index" class="text-white text-decoration-none">
                    View Details <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Product Traceability -->
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-search"></i> Product Traceability</h5>
            </div>
            <div class="card-body">
                <p>Scan or enter product code to view complete traceability information:</p>
                <form method="post">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Enter Product Code" name="productCode">
                        <button class="btn btn-primary" type="submit">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>
                </form>
                <small class="text-muted">View materials used, production room, employees assigned, and distribution information</small>
            </div>
        </div>
    </div>

    <!-- Expiring Materials Alert -->
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Expiring Materials</h5>
            </div>
            <div class="card-body">
                <p>Materials expiring in the next 30 days:</p>
                <div class="alert alert-warning">
                    <i class="bi bi-info-circle"></i> Connect to database to view expiring materials
                </div>
                <a asp-page="/RawMaterials/Index" class="btn btn-sm btn-outline-danger">View All Materials</a>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mt-2">
    <!-- Recent Production -->
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Production</h5>
            </div>
            <div class="card-body">
                <p>Latest products manufactured:</p>
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Connect to database to view recent production
                </div>
                <a asp-page="/Products/Index" class="btn btn-sm btn-outline-success">View All Products</a>
            </div>
        </div>
    </div>
</div>
