@page
@model FactorySystemWebpage.Pages.Dashboard.Admin.AttendanceModel
@{
    ViewData["Title"] = Model.Translate("Manage Attendance", "إدارة الحضور");
    Layout = "~/Pages/Shared/_LayoutArabic.cshtml";
}

<div class="mb-4">
    <h1><i class="bi bi-calendar-check"></i> @Model.Translate("Manage Attendance", "إدارة الحضور")</h1>
    <p class="lead text-muted">@Model.Translate("View and manage employee attendance records", "عرض وإدارة سجلات حضور الموظفين")</p>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">@Model.Translate("Filter Attendance", "تصفية الحضور")</h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">@Model.Translate("From Date", "من تاريخ")</label>
                <input type="date" class="form-control" name="fromDate" />
            </div>
            <div class="col-md-4">
                <label class="form-label">@Model.Translate("To Date", "إلى تاريخ")</label>
                <input type="date" class="form-control" name="toDate" />
            </div>
            <div class="col-md-4">
                <label class="form-label">@Model.Translate("Employee", "الموظف")</label>
                <select class="form-select" name="employeeId">
                    <option value="">@Model.Translate("All Employees", "جميع الموظفين")</option>
                </select>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-filter"></i> @Model.Translate("Filter", "تصفية")
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0">@Model.Translate("Attendance Records", "سجلات الحضور")</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>@Model.Translate("Employee", "الموظف")</th>
                        <th>@Model.Translate("Date", "التاريخ")</th>
                        <th>@Model.Translate("Start Time", "وقت البداية")</th>
                        <th>@Model.Translate("End Time", "وقت النهاية")</th>
                        <th>@Model.Translate("Hours", "الساعات")</th>
                        <th>@Model.Translate("Production Room", "غرفة الإنتاج")</th>
                        <th>@Model.Translate("Status", "الحالة")</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="7" class="text-center text-muted">
                            <i class="bi bi-info-circle"></i> @Model.Translate("Connect to database to view attendance records", "اتصل بقاعدة البيانات لعرض سجلات الحضور")
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
