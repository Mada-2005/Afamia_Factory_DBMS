@page
@model FactorySystemWebpage.Pages.Dashboard.Admin.IndexModel
@{
    ViewData["Title"] = Model.Translate("Admin Dashboard", "لوحة تحكم المدير");
    Layout = "~/Pages/Shared/_LayoutArabic.cshtml";
}

<div class="mb-4">
    <h1 class="display-4">
        <i class="bi bi-speedometer2"></i> @Model.Translate("Admin Dashboard", "لوحة تحكم المدير")
    </h1>
    <p class="lead text-muted">
        @Model.Translate($"Welcome, {Model.CurrentFullName}", $"مرحباً، {Model.CurrentFullName}")
    </p>
</div>

<div class="row g-4 mb-4">
    <!-- Raw Materials -->
    <div class="col-md-3">
        <div class="card text-white bg-primary h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase">@Model.Translate("Raw Materials", "المواد الخام")</h6>
                        <h2 class="mb-0">--</h2>
                        <small>@Model.Translate("Items in stock", "عناصر في المخزن")</small>
                    </div>
                    <i class="bi bi-bag display-4"></i>
                </div>
            </div>
            <div class="card-footer">
                <a asp-page="/RawMaterials/Index" class="text-white text-decoration-none">
                    @Model.Translate("View Details", "عرض التفاصيل") <i class="bi @(Model.IsArabic ? "bi-arrow-left" : "bi-arrow-right")"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Products -->
    <div class="col-md-3">
        <div class="card text-white bg-success h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase">@Model.Translate("Products", "المنتجات")</h6>
                        <h2 class="mb-0">--</h2>
                        <small>@Model.Translate("Ready for shipment", "جاهز للشحن")</small>
                    </div>
                    <i class="bi bi-basket display-4"></i>
                </div>
            </div>
            <div class="card-footer">
                <a asp-page="/Products/Index" class="text-white text-decoration-none">
                    @Model.Translate("View Details", "عرض التفاصيل") <i class="bi @(Model.IsArabic ? "bi-arrow-left" : "bi-arrow-right")"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Employees -->
    <div class="col-md-3">
        <div class="card text-white bg-info h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase">@Model.Translate("Employees", "الموظفون")</h6>
                        <h2 class="mb-0">--</h2>
                        <small>@Model.Translate("Active workers", "عمال نشطون")</small>
                    </div>
                    <i class="bi bi-people display-4"></i>
                </div>
            </div>
            <div class="card-footer">
                <a asp-page="/Employees/Index" class="text-white text-decoration-none">
                    @Model.Translate("View Details", "عرض التفاصيل") <i class="bi @(Model.IsArabic ? "bi-arrow-left" : "bi-arrow-right")"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Production Rooms -->
    <div class="col-md-3">
        <div class="card text-white bg-warning h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase">@Model.Translate("Production Rooms", "غرف الإنتاج")</h6>
                        <h2 class="mb-0">--</h2>
                        <small>@Model.Translate("Active rooms", "غرف نشطة")</small>
                    </div>
                    <i class="bi bi-building display-4"></i>
                </div>
            </div>
            <div class="card-footer">
                <a asp-page="/ProductionRooms/Index" class="text-white text-decoration-none">
                    @Model.Translate("View Details", "عرض التفاصيل") <i class="bi @(Model.IsArabic ? "bi-arrow-left" : "bi-arrow-right")"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mb-4">
    <!-- Quick Actions -->
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-lightning"></i> @Model.Translate("Quick Actions", "إجراءات سريعة")</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-page="/Dashboard/Admin/Attendance" class="btn btn-outline-primary">
                        <i class="bi bi-calendar-check"></i> @Model.Translate("Manage Attendance", "إدارة الحضور")
                    </a>
                    <a asp-page="/Dashboard/Admin/Payroll" class="btn btn-outline-success">
                        <i class="bi bi-cash"></i> @Model.Translate("Process Payroll", "معالجة الرواتب")
                    </a>
                    <a asp-page="/ProductionRooms/Create" class="btn btn-outline-warning">
                        <i class="bi bi-plus-circle"></i> @Model.Translate("Add Production Room", "إضافة غرفة إنتاج")
                    </a>
                    <a asp-page="/ProductSearch" class="btn btn-outline-info">
                        <i class="bi bi-search"></i> @Model.Translate("Product Traceability", "تتبع المنتج")
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Expiring Materials Alert -->
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> @Model.Translate("Expiring Materials", "مواد منتهية الصلاحية")</h5>
            </div>
            <div class="card-body">
                <p>@Model.Translate("Materials expiring in the next 30 days:", "المواد التي تنتهي صلاحيتها في الـ 30 يومًا القادمة:")</p>
                <div class="alert alert-warning">
                    <i class="bi bi-info-circle"></i> @Model.Translate("Connect to database to view expiring materials", "اتصل بقاعدة البيانات لعرض المواد منتهية الصلاحية")
                </div>
                <a asp-page="/RawMaterials/Index" class="btn btn-sm btn-outline-danger">
                    @Model.Translate("View All Materials", "عرض جميع المواد")
                </a>
            </div>
        </div>
    </div>
</div>
