@page
@model FactorySystemWebpage.Pages.Vendors.CreateModel
@{
    ViewData["Title"] = "Create Vendor";
}

<h1><i class="bi bi-plus-circle"></i> Create New Vendor</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Vendor.CompanyName" class="form-label"></label>
                        <input asp-for="Vendor.CompanyName" class="form-control" />
                        <span asp-validation-for="Vendor.CompanyName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Vendor.ContactPerson" class="form-label"></label>
                        <input asp-for="Vendor.ContactPerson" class="form-control" />
                        <span asp-validation-for="Vendor.ContactPerson" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Vendor.Phone" class="form-label"></label>
                            <input asp-for="Vendor.Phone" class="form-control" />
                            <span asp-validation-for="Vendor.Phone" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Vendor.Email" class="form-label"></label>
                            <input asp-for="Vendor.Email" class="form-control" type="email" />
                            <span asp-validation-for="Vendor.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Vendor.Address" class="form-label"></label>
                        <textarea asp-for="Vendor.Address" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Vendor.Address" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Create
                        </button>
                        <a asp-page="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
