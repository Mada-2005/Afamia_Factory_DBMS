@page
@model Afamia_UI.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<style>
    /* ==================== FULL-SCREEN BACKGROUND ==================== */
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        position: relative;
        overflow-x: hidden;
    }

    /* ==================== LOGIN CARD CONTAINER ==================== */
    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        position: relative;
        z-index: 1;
    }

    /* ==================== MAIN LOGIN CARD ==================== */
    .login-card {
        background: white;
        border-radius: 24px;
        padding: 50px 40px;
        width: 100%;
        max-width: 480px;
        box-shadow: 0 30px 60px rgba(0, 0, 0, 0.3);
        animation: slideInUp 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        position: relative;
        overflow: hidden;
    }

    /* Top gradient bar on card */
    .login-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 6px;
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
    }

    /* ==================== ANIMATIONS ==================== */
    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(50px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
    }

    /* ==================== HEADER SECTION (Icon + Title) ==================== */
    .login-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .login-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
        animation: float 3s ease-in-out infinite;
    }

    .login-title {
        font-size: 32px;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 10px;
    }

    .login-subtitle {
        color: #7f8c8d;
        font-size: 15px;
    }

    /* ==================== FORM INPUT STYLING ==================== */
    .form-group-modern {
        margin-bottom: 25px;
        position: relative;
    }

    .form-label-modern {
        font-weight: 600;
        color: #555;
        margin-bottom: 10px;
        font-size: 14px;
        display: block;
    }

    .input-wrapper {
        position: relative;
    }

    /* Icon inside input field (left side) */
    .input-icon {
        position: absolute;
        left: 18px;
        top: 50%;
        transform: translateY(-50%);
        color: #999;
        z-index: 2;
    }

    /* Modern input field */
    .form-control-modern {
        border: 2px solid #e8e8e8;
        border-radius: 14px;
        padding: 16px 18px 16px 50px;
        font-size: 15px;
        transition: all 0.3s ease;
        background: #fafafa;
        width: 100%;
    }

    /* Input field focus effect (lifts up, changes color) */
    .form-control-modern:focus {
        border-color: #667eea;
        background: white;
        box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
        outline: none;
        transform: translateY(-2px);
    }

    /* ==================== REMEMBER ME CHECKBOX ==================== */
    .form-check-modern {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 30px;
    }

    .form-check-modern input[type="checkbox"] {
        width: 20px;
        height: 20px;
        cursor: pointer;
        accent-color: #667eea;
    }

    .form-check-modern label {
        color: #555;
        font-size: 14px;
        cursor: pointer;
        margin: 0;
    }

    /* ==================== LOGIN BUTTON ==================== */
    .btn-login {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 14px;
        padding: 16px;
        font-size: 16px;
        font-weight: 600;
        color: white;
        width: 100%;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
        position: relative;
        overflow: hidden;
    }

    /* Button hover effect (lifts up, bigger shadow) */
    .btn-login:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.5);
    }

    .btn-login:active {
        transform: translateY(-1px);
    }

    /* ==================== ERROR MESSAGES ==================== */
    .text-danger {
        font-size: 13px;
        margin-top: 6px;
        display: block;
        color: #e74c3c;
    }

    /* ==================== FLOATING BACKGROUND CIRCLES ==================== */
    .bg-decoration {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        overflow: hidden;
        z-index: 0;
    }

    .circle {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
    }

    .circle-1 {
        width: 400px;
        height: 400px;
        top: -200px;
        right: -100px;
        animation: float 6s ease-in-out infinite;
    }

    .circle-2 {
        width: 300px;
        height: 300px;
        bottom: -150px;
        left: -100px;
        animation: float 8s ease-in-out infinite reverse;
    }

    .circle-3 {
        width: 200px;
        height: 200px;
        top: 50%;
        left: -100px;
        animation: float 7s ease-in-out infinite;
    }
</style>

<!-- ==================== ANIMATED BACKGROUND DECORATION ==================== -->
<div class="bg-decoration">
    <div class="circle circle-1"></div>
    <div class="circle circle-2"></div>
    <div class="circle circle-3"></div>
</div>

<!-- ==================== MAIN LOGIN CONTAINER ==================== -->
<div class="login-container">
    <div class="login-card" data-animate="fade">
        <!-- ==================== HEADER (Logo + Title) ==================== -->
        <div class="login-header">
            <div class="login-icon">
                <svg width="40" height="40" viewBox="0 0 24 24" fill="none">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" stroke="white" stroke-width="2" fill="none"/>
                    <polyline points="9 22 9 12 15 12 15 22" stroke="white" stroke-width="2"/>
                </svg>
            </div>
            <h1 class="login-title">Welcome Back</h1>
            <p class="login-subtitle">Sign in to access the Afamia Factory System</p>
        </div>

        <!-- ==================== LOGIN FORM ==================== -->
        <form method="post">
            <!-- Username Input -->
            <div class="form-group-modern">
                <label class="form-label-modern">Username</label>
                <div class="input-wrapper">
                    <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none">
                        <circle cx="12" cy="8" r="3.5" stroke="currentColor" stroke-width="2"/>
                        <path d="M4 20c0-3.5 3-6.5 8-6.5s8 3 8 6.5" stroke="currentColor" stroke-width="2"/>
                    </svg>
                    <input asp-for="Username" class="form-control-modern" placeholder="Enter your username" />
                </div>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <!-- Password Input -->
            <div class="form-group-modern">
                <label class="form-label-modern">Password</label>
                <div class="input-wrapper">
                    <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none">
                        <rect x="5" y="11" width="14" height="10" rx="2" stroke="currentColor" stroke-width="2"/>
                        <path d="M8 11V7a4 4 0 0 1 8 0v4" stroke="currentColor" stroke-width="2"/>
                    </svg>
                    <input asp-for="Password" type="password" class="form-control-modern" placeholder="Enter your password" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Remember Me Checkbox -->
            <div class="form-check-modern">
                <input asp-for="RememberMe" type="checkbox" id="rememberMe" />
                <label for="rememberMe">Remember me for 8 hours</label>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn-login btn-animated">
                Login to Dashboard
            </button>
        </form>
    </div>
</div>
