@page
@model Afamia_UI.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container d-flex justify-content-center align-items-start pt-10 pt-md-6 pt-lg-4" style="height:100vh;">
    <div class="card shadow p-4" style="width: 100%; max-width: 400px;">
        <h3 class="text-center mb-4">Login</h3>

        <form method="post">
            <!-- Username -->
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input asp-for="Username" class="form-control" placeholder="Enter username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <!-- Remember Me -->
            <div class="mb-3 form-check">
                <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="rememberMe" />
                <label class="form-check-label" for="rememberMe">
                    Remember me for 8 hours
                </label>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>
    </div>
</div>
