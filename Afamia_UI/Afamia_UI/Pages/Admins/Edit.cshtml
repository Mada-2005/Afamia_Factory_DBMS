@page
@model Afamia_UI.Pages.Admins.EditModel
@{
    ViewData["Title"] = "Edit Employee";
}

<form method="post" asp-page-handler="Submit">
    <div class="row">

        <div class="col-md-2 mb-3">
            <label asp-for="employee.Id" class="form-label">ID (Read Only)</label>
            <input type="text" class="form-control" asp-for="employee.Id" readonly>
        </div>

        <div class="col-md-2 mb-3">
            <label asp-for="employee.FName" class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="employee.FName">
        </div>


        <div class="col-md-2 mb-3">
            <label asp-for="employee.LName" class="form-label">LName</label>
            <input type="text" class="form-control" asp-for="employee.LName">
        </div>


        <div class="col-md-2 mb-3">
            <label asp-for="employee.role" class="form-label">Role</label>
            <input type="text" class="form-control" asp-for="employee.role">
        </div>


        <div class="col-md-2 mb-3">
            <label asp-for="employee.Works_in_Factory" class="form-label">Works in Factory</label>
            <input type="text" class="form-control" asp-for="employee.Works_in_Factory">
        </div>

        
        @for (int i = 0; i < Model.employee.Phone.Count; i++)
            {
                if(i > Model.employee.Phone.Count)
                    break;
                <div class="col-md-2 mb-3">
                    <label asp-for="employee.Phone[i]" class="form-label">Phone Number@(i+1)</label>
                    <input type="text" class="form-control" asp-for="employee.Phone[i]">
                    <button type="submit" asp-page-handler="RemovePhone" asp-route-index="@i" class="btn btn-danger btn-sm mt-1">Remove</button>
                </div>
            }
        <div><button type="submit" asp-page-handler="AddPhone" class="btn btn-success btn-sm mt-2 mb-2">+ Add Phone</button></div>
            

    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>