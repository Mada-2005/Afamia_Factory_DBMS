@page
@model Afamia_UI.Pages.Admins.IndexModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container py-4">
    <h1 class="mb-4">Admin Dashboard</h1>

    <div class="row g-3">
        <!-- Employees card -->
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <a asp-page="/Admins/Employees" class="text-decoration-none">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <!-- simple inline SVG icon -->
                            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                                <circle cx="12" cy="8" r="3.2" stroke="#0d6efd" stroke-width="1.4" fill="#e7f1ff" />
                                <path d="M4 20c0-3.3 2.7-6 6-6h4c3.3 0 6 2.7 6 6" stroke="#0d6efd" stroke-width="1.4" fill="none" />
                            </svg>
                        </div>

                        <div class="flex-grow-1">
                            <div class="d-flex align-items-baseline justify-content-between">
                                <h5 class="mb-0 text-dark">Employees</h5>
                                <small class="text-muted">Active</small>
                            </div>

                            <div class="d-flex align-items-center mt-2">
                                <h2 class="mb-0 me-3">@Model.TotalActiveEmployees</h2>
                                <small class="text-success">+3% <span class="visually-hidden">increase</span></small>
                            </div>

                            <p class="mb-0 mt-2 small text-muted">Click to manage employees</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <!-- Production Rooms card -->
        <div class="col-6 col-md-4 col-lg-3">
            <a asp-page="/Admins/ProductionRooms" class="text-decoration-none">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <!-- Icon -->
                            <div class="me-3">
                                <svg width="40" height="40" viewBox="0 0 24 24" fill="none">
                                    <rect x="3" y="7" width="18" height="12" rx="2" stroke="#6f42c1" stroke-width="1.4" fill="#f5edff" />
                                    <rect x="6" y="4" width="12" height="5" rx="1" stroke="#6f42c1" stroke-width="1.2" fill="#f5edff" />
                                    <circle cx="9" cy="14" r="1.3" fill="#6f42c1" />
                                    <circle cx="15" cy="14" r="1.3" fill="#6f42c1" />
                                </svg>
                            </div>

                            <!-- Info -->
                            <div>
                                <h6 class="mb-0 text-dark">Production Rooms</h6>

                                <div class="d-flex align-items-center mt-2">
                                    <h3 class="mb-0 me-2">@Model.TotalProductionRooms</h3>
                                    <small class="text-muted">rooms</small>
                                </div> 

                               <p class="mb-0 mt-2 small text-muted">Click to view & manage rooms</p>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

    </div>
</div>