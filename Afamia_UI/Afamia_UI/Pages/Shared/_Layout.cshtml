<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Afamia_UI</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/animations.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Afamia_UI.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="animate-fade-in-down">
        <nav class="navbar navbar-modern navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container">
                <a class="navbar-brand-modern" asp-area="" asp-page="/Index">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" style="display: inline-block; margin-right: 8px; vertical-align: middle;">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" stroke="url(#gradient)" stroke-width="2" fill="none"/>
                        <polyline points="9 22 9 12 15 12 15 22" stroke="url(#gradient)" stroke-width="2"/>
                        <defs>
                            <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                                <stop offset="0%" style="stop-color:#667eea;stop-opacity:1" />
                                <stop offset="100%" style="stop-color:#764ba2;stop-opacity:1" />
                            </linearGradient>
                        </defs>
                    </svg>
                    Afamia Factory
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <!-- CEO -->
                            if (User.IsInRole("CEO"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/CEO/Index">
                                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" style="display: inline-block; margin-right: 6px; vertical-align: middle;">
                                            <rect x="3" y="3" width="7" height="7" rx="1" stroke="currentColor" stroke-width="2" fill="none"/>
                                            <rect x="14" y="3" width="7" height="7" rx="1" stroke="currentColor" stroke-width="2" fill="none"/>
                                            <rect x="3" y="14" width="7" height="7" rx="1" stroke="currentColor" stroke-width="2" fill="none"/>
                                            <rect x="14" y="14" width="7" height="7" rx="1" stroke="currentColor" stroke-width="2" fill="none"/>
                                        </svg>
                                        CEO Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Admins/Employees(operations)/Employees">
                                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" style="display: inline-block; margin-right: 6px; vertical-align: middle;">
                                            <circle cx="12" cy="8" r="3" stroke="currentColor" stroke-width="2" fill="none"/>
                                            <path d="M4 20c0-3.3 2.7-6 6-6h4c3.3 0 6 2.7 6 6" stroke="currentColor" stroke-width="2" fill="none"/>
                                        </svg>
                                        Employees
                                    </a>
                                </li>
                            }

                            <!-- Admin -->
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Admins/Index">
                                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" style="display: inline-block; margin-right: 6px; vertical-align: middle;">
                                            <rect x="3" y="3" width="7" height="7" rx="1" stroke="currentColor" stroke-width="2" fill="none"/>
                                            <rect x="14" y="3" width="7" height="7" rx="1" stroke="currentColor" stroke-width="2" fill="none"/>
                                            <rect x="3" y="14" width="7" height="7" rx="1" stroke="currentColor" stroke-width="2" fill="none"/>
                                            <rect x="14" y="14" width="7" height="7" rx="1" stroke="currentColor" stroke-width="2" fill="none"/>
                                        </svg>
                                        Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Admins/Employees(operations)/Employees">
                                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" style="display: inline-block; margin-right: 6px; vertical-align: middle;">
                                            <circle cx="12" cy="8" r="3" stroke="currentColor" stroke-width="2" fill="none"/>
                                            <path d="M4 20c0-3.3 2.7-6 6-6h4c3.3 0 6 2.7 6 6" stroke="currentColor" stroke-width="2" fill="none"/>
                                        </svg>
                                        Employees
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Admins/ProductionRooms(operations)/ProductionRooms">
                                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" style="display: inline-block; margin-right: 6px; vertical-align: middle;">
                                            <rect x="3" y="7" width="18" height="12" rx="2" stroke="currentColor" stroke-width="2" fill="none"/>
                                            <rect x="6" y="4" width="12" height="5" rx="1" stroke="currentColor" stroke-width="2" fill="none"/>
                                        </svg>
                                        Production Rooms
                                    </a>
                                </li>
                            }

                            <!-- Employee (all authenticated users) -->
                            if (User.IsInRole("Employee"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Employees/Index">
                                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" style="display: inline-block; margin-right: 6px; vertical-align: middle;">
                                            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" stroke="currentColor" stroke-width="2" fill="none"/>
                                        </svg>
                                        Employee Home
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <!-- Non-logged users -->
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Privacy">Privacy</a>
                            </li>
                        }
                        <li class="nav-item ms-auto">
                            <form method="post" asp-page="/Logout" onsubmit="return confirm('Are you sure you want to logout?');" style="display: inline-block;">
                                <button type="submit" class="btn btn-modern btn-modern-outline">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" style="display: inline-block; margin-right: 6px; vertical-align: middle;">
                                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4M16 17l5-5-5-5M21 12H9" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                                    </svg>
                                    Logout
                                </button>
                            </form>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%); padding: 20px 0; margin-top: 50px;">
        <div class="container text-center">
            <p style="margin: 0; font-weight: 600; color: #555;">
                &copy; 2025 - Afamia Factory Management System - <a asp-area="" asp-page="/Privacy" style="color: #667eea; text-decoration: none;">Privacy</a>
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
