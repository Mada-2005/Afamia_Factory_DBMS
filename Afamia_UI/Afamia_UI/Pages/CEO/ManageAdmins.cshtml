@page
@model Afamia_UI.Pages.CEO.ManageAdminsModel
@{
    ViewData["Title"] = "Manage Admin Accounts";
}

<style>
    /* ==================== CONTAINER ==================== */
    .manage-admins-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    /* ==================== HEADER ==================== */
    .page-header {
        text-align: center;
        margin-bottom: 50px;
        animation: fadeInDown 0.6s ease-out;
    }

    .page-title {
        font-size: 42px;
        font-weight: 800;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 10px;
    }

    .page-subtitle {
        color: #7f8c8d;
        font-size: 16px;
        font-weight: 500;
    }

    /* ==================== GRID LAYOUT ==================== */
    .admin-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 40px;
        margin-bottom: 40px;
    }

    /* ==================== CARDS ==================== */
    .card-modern {
        background: white;
        border-radius: 24px;
        padding: 40px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        animation: fadeInUp 0.8s ease-out;
    }

    .card-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 3px solid #f0f0f0;
    }

    .card-icon {
        width: 50px;
        height: 50px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        font-size: 24px;
    }

    .card-title {
        font-size: 24px;
        font-weight: 700;
        color: #2c3e50;
    }

    /* ==================== FORM ==================== */
    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        display: block;
        font-size: 14px;
        font-weight: 600;
        color: #555;
        margin-bottom: 10px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .form-input {
        width: 100%;
        padding: 14px 18px;
        border: 2px solid #e8e8e8;
        border-radius: 12px;
        font-size: 16px;
        transition: all 0.3s ease;
        background: #fafafa;
    }

    .form-input:focus {
        outline: none;
        border-color: #667eea;
        background: white;
        box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
    }

    .btn-create {
        width: 100%;
        padding: 16px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 16px;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.3);
    }

    .btn-create:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
    }

    /* ==================== ADMIN LIST ==================== */
    .admin-list {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .admin-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 20px 25px;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        border-radius: 15px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .admin-item::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 5px;
        background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
    }

    .admin-item:hover {
        transform: translateX(5px);
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    }

    .admin-info {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .admin-avatar {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 18px;
    }

    .admin-username {
        font-size: 18px;
        font-weight: 700;
        color: #2c3e50;
    }

    .admin-badge {
        background: linear-gradient(135deg, #56ab2f 0%, #a8e063 100%);
        color: white;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        margin-left: 10px;
    }

    .btn-delete {
        background: linear-gradient(135deg, #f85032 0%, #e73827 100%);
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 10px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-delete:hover {
        transform: scale(1.05);
        box-shadow: 0 5px 15px rgba(248, 80, 50, 0.3);
    }

    /* ==================== ALERTS ==================== */
    .alert {
        padding: 18px 24px;
        border-radius: 12px;
        margin-bottom: 30px;
        font-weight: 600;
        animation: slideInDown 0.4s ease-out;
    }

    .alert-success {
        background: linear-gradient(135deg, rgba(86, 171, 47, 0.1) 0%, rgba(168, 224, 99, 0.1) 100%);
        border: 2px solid #56ab2f;
        color: #2d5016;
    }

    .alert-danger {
        background: linear-gradient(135deg, rgba(248, 80, 50, 0.1) 0%, rgba(231, 76, 60, 0.1) 100%);
        border: 2px solid #f85032;
        color: #a02622;
    }

    .no-admins {
        text-align: center;
        padding: 60px 20px;
        color: #95a5a6;
    }

    /* ==================== ANIMATIONS ==================== */
    @@keyframes fadeInDown {
        from { opacity: 0; transform: translateY(-30px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @@keyframes slideInDown {
        from { opacity: 0; transform: translateY(-20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* ==================== RESPONSIVE ==================== */
    @@media (max-width: 768px) {
        .admin-grid {
            grid-template-columns: 1fr;
        }

        .page-title {
            font-size: 32px;
        }
    }
</style>

<div class="manage-admins-container">
    <!-- ==================== HEADER ==================== -->
    <div class="page-header">
        <h1 class="page-title">Manage Admin Accounts</h1>
        <p class="page-subtitle">Create and manage administrator accounts</p>
    </div>

    <!-- ==================== ALERTS ==================== -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success">
            âœ“ @Model.SuccessMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            âœ— @Model.ErrorMessage
        </div>
    }

    <!-- ==================== GRID LAYOUT ==================== -->
    <div class="admin-grid">
        <!-- CREATE ADMIN FORM -->
        <div class="card-modern">
            <div class="card-header">
                <div class="card-icon">âž•</div>
                <h2 class="card-title">Create New Admin</h2>
            </div>

            <form method="post" asp-page-handler="Create">
                <div class="form-group">
                    <label class="form-label">Username</label>
                    <input type="text"
                           class="form-input"
                           asp-for="Username"
                           placeholder="Enter username (min 3 characters)"
                           required
                           minlength="3" />
                </div>

                <div class="form-group">
                    <label class="form-label">Password</label>
                    <input type="password"
                           class="form-input"
                           asp-for="Password"
                           placeholder="Enter password (min 6 characters)"
                           required
                           minlength="6" />
                </div>

                <div class="form-group">
                    <label class="form-label">Confirm Password</label>
                    <input type="password"
                           class="form-input"
                           asp-for="ConfirmPassword"
                           placeholder="Confirm password"
                           required
                           minlength="6" />
                </div>

                <button type="submit" class="btn-create">
                    Create Admin Account
                </button>
            </form>
        </div>

        <!-- ADMIN LIST -->
        <div class="card-modern">
            <div class="card-header">
                <div class="card-icon">ðŸ‘¥</div>
                <h2 class="card-title">Admin Accounts (@Model.AdminAccounts.Count)</h2>
            </div>

            <div class="admin-list">
                @if (Model.AdminAccounts.Count > 0)
                {
                    foreach (var admin in Model.AdminAccounts)
                    {
                        <div class="admin-item">
                            <div class="admin-info">
                                <div class="admin-avatar">@admin.Username.Substring(0, 1).ToUpper()</div>
                                <div>
                                    <span class="admin-username">@admin.Username</span>
                                    <span class="admin-badge">ADMIN</span>
                                </div>
                            </div>
                            <form method="post" asp-page-handler="Delete" asp-route-username="@admin.Username"
                                  onsubmit="return confirm('Are you sure you want to delete admin account \'@admin.Username\'?');">
                                <button type="submit" class="btn-delete">Delete</button>
                            </form>
                        </div>
                    }
                }
                else
                {
                    <div class="no-admins">
                        <svg width="64" height="64" viewBox="0 0 24 24" fill="none" style="margin-bottom: 20px;">
                            <circle cx="12" cy="8" r="3.5" stroke="#e0e0e0" stroke-width="2" fill="none"/>
                            <path d="M4 20c0-3.5 3-6.5 8-6.5s8 3 8 6.5" stroke="#e0e0e0" stroke-width="2" fill="none"/>
                        </svg>
                        <h4>No Admin Accounts</h4>
                        <p>Create your first admin account using the form on the left</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Back Button -->
    <div style="text-align: center; margin-top: 40px;">
        <a asp-page="/CEO/Index" style="display: inline-flex; align-items: center; gap: 10px; padding: 14px 30px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; text-decoration: none; border-radius: 12px; font-weight: 600; transition: all 0.3s ease;">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
                <path d="M19 12H5M12 19l-7-7 7-7" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
            Back to CEO Dashboard
        </a>
    </div>
</div>
